
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #000;
            color: #fff;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .container {
            max-width: 1200px;
            width: 100%;
            margin: 0 auto;
        }

        profile {
            display:block;
            padding-top: 80px;
            width: 100%;
        }

        .row {
            margin-bottom: 20px;
        }

        h2, h3, h4 {
            color: #007BFF;
            text-align: center;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .col-md-6 {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-input,
        textarea {
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 4px;
            outline: none;
            background-color: #fff;
            color: #333;
            transition: border-color 0.3s;
        }

        .btn {
            background-color: #007BFF;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
            width: 100%;
        }

        .btn:hover {
            background-color: #0056b3;
        }
        .project-list {
            overflow-y: auto;
        }

        .project-list h4 {
            font-size: 18px;
        }

        .project-list a {
            text-decoration: none;
            color: #007BFF;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        @media (max-width: 600px) {
            .row {
                flex-direction: column;
                align-items: center;
            }

            .col-md-6 {
                margin: 0;
            }
        }
    </style>

<profile>
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Car Posting:</h3>
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Post Name:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-price">Selling Price ($):</label>
        <input class="form-input" type="number" id="post-price" name="post-price" />
      </div>
      <div class="form-group">
        <label for="post-desc">Description:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <label for="post-vin">Vehicle's Vin:</label>
        <textarea class="form-input" type ="number" id="post-vin" name="post-vin"></textarea>
      </div>
      <div class="form-group">
        <label for="post-mileage">Mileage:</label>
        <textarea class="form-input" id="post-mileage" name="post-mileage"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Post</button>
      </div>
    </form>
  </div>

  {{#if inventory.length}}
  <div class="col-md-6 post-list">
    <h3>Current Post:</h3>

    {{#each inventory as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/inventory/{{post.id}}">{{post.make}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
</profile>
<script src="./js/profile.js"></script>


